
{
  "name": "akablog-hugo-theme-setup",
  "version": "1.0.0",
  "description": "Tailwind CSS setup for Akablog Hugo theme",
  "scripts": {
    "build:css": "tailwindcss -i ./themes/akablog/assets/css/style.css -o ./themes/akablog/static/css/style.css --minify",
    "watch:css": "tailwindcss -i ./themes/akablog/assets/css/style.css -o ./themes/akablog/static/css/style.css --watch"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.1",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.3"
  }
}
